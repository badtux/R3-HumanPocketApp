<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_900"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FromDateActivity" >


    <LinearLayout
        android:id="@+id/linearLayout_leave_category"
        android:orientation="vertical"
        android:weightSum="9"
        android:layout_width="fill_parent"
        android:background="@color/gray_900"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/linearLayout_01_0"
            android:orientation="horizontal"
            android:layout_weight="0.6"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_01"
            android:orientation="horizontal"
            android:layout_weight="1.24"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:id="@+id/relative_layout_01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/textFrom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:text="FROM"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout></LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_02"
            android:orientation="horizontal"
            android:layout_weight="1.32"
            android:layout_width="fill_parent"
            android:layout_height="0dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:weightSum="7"
                android:gravity="center"
                android:layout_height="fill_parent">

                <TextView
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/textView_year" />

                <TextView
                    android:text="/"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/textView_1" />

                <TextView
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/textView_month" />

                <TextView
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textSize="50sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/textView_0" />

                <TextView
                    android:text="/"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/textView_2" />

                <TextView
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/textView_day" />

                <TextView
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/textView_weekday" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_003"
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:layout_width="fill_parent"
            android:layout_height="0dp">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_0003"
            android:orientation="horizontal"
            android:layout_weight="1.8"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ic_left"
                    android:id="@+id/button_left" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_right"
                    android:id="@+id/button_right" />

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout_weekday"
                    style="@style/MyTabLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:tabMaxWidth="0dp"
                    app:tabGravity="fill"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="#76FF03"
                    android:background="@drawable/button_background_03"
                    android:minHeight="?attr/actionBarSize"
                    android:layout_toRightOf="@+id/button_left"
                    android:layout_toLeftOf="@+id/button_right"
                    android:layout_toStartOf="@+id/button_right"
                    android:layout_toEndOf="@+id/button_left" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_00003"
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:layout_width="fill_parent"
            android:layout_height="0dp">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_03"
            android:orientation="horizontal"
            android:layout_weight="1.8"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ic_left"
                    android:id="@+id/btn_left" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_right"
                    android:id="@+id/btn_right" />

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout_day"
                    style="@style/MyTabLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:tabMaxWidth="0dp"
                    app:tabGravity="fill"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="#76FF03"
                    android:background="@drawable/button_background_03"
                    android:minHeight="?attr/actionBarSize"
                    android:layout_toRightOf="@+id/btn_left"
                    android:layout_toLeftOf="@+id/btn_right"
                    android:layout_toStartOf="@+id/btn_right"
                    android:layout_toEndOf="@+id/btn_left" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_000003"
            android:orientation="horizontal"
            android:layout_weight="0.6"
            android:layout_width="fill_parent"
            android:layout_height="0dp">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_05"
            android:orientation="horizontal"
            android:layout_weight="1.14"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/linearLayout_footer"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:text="BACK"
                    android:background="@drawable/button_click03"
                    android:textColor="@color/white"
                    android:id="@+id/button_back" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textSize="30sp"
                    android:text="EXIT"
                    android:layout_weight="1"
                    android:textColor="@color/red"
                    android:background="@drawable/button_click03"
                    android:id="@+id/button_exit" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textSize="30sp"
                    android:text="NEXT"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@drawable/button_click03"
                    android:id="@+id/button_next" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>