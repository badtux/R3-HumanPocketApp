<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_work_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_background"
    tools:context="com.rype3.pocket_hrm.LeaveActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/appbar"
            layout="@layout/appbar">
        </include>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar_layout">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        card_view:cardBackgroundColor="@color/primary_t"
        card_view:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="SELECT LEAVE TYPE"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:id="@+id/title_leave_type"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_below="@+id/title_leave_type"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <RadioGroup
            android:id="@+id/radio_leave_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/cb_h_m"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="HALF DAY MORNING"
            android:tag="HALF DAY MORNING"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="5dp" />

        <RadioButton
            android:id="@+id/cb_h_e"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="HALF DAY EVENING"
            android:tag="HALF DAY EVENING"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="5dp" />

        <RadioButton
            android:id="@+id/cb_f_d"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="FULL DAY"
            android:tag="FULL DAY"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="5dp" /></RadioGroup>

    </LinearLayout>

    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_2"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_below="@+id/card_view_1"
        card_view:cardBackgroundColor="@color/primary_t"
        card_view:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="LEAVE CATEGORY"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:id="@+id/title_leave_category"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/linearLayout_1"
        android:layout_below="@+id/title_leave_category"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <RadioGroup
        android:id="@+id/radio_leave_category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RadioButton
        android:id="@+id/cb_casual"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CASUAL"
        android:tag="CASUAL"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="5dp" />

    <RadioButton
        android:id="@+id/cb_annual"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ANNUAL"
        android:tag="ANNUAL"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="5dp" />

    <RadioButton
        android:id="@+id/cb_medical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MEDICAL"
        android:tag="MEDICAL"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="5dp" />

    <RadioButton
        android:id="@+id/cb_no_pay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="NO PAY"
        android:tag="NO PAY"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="5dp" /></RadioGroup>

    </LinearLayout>

    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_3"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:layout_below="@+id/card_view_2"
        card_view:cardBackgroundColor="@color/primary_t"
        card_view:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="LEAVE REASON"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:id="@+id/title_leave_reason"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_margin="5dp"
        android:layout_below="@+id/title_leave_reason"
        android:layout_height="fill_parent" />

    </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_4"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_below="@+id/card_view_3"
        card_view:cardBackgroundColor="@color/primary_t"
        card_view:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout_leave_type"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="2">

    <RelativeLayout
        android:id="@+id/relative_layout_from"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:background="@color/primary_t"
        android:layout_margin="2dp"
        android:layout_weight="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="FROM"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:id="@+id/tv_from"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="12sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/tv_from"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="2">

    <EditText
        android:id="@+id/editText_from"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.5"
        android:padding="3dp"
        android:gravity="center"
        android:layout_margin="1dp"
        android:background="@color/colour_transparent"
        android:inputType="textPersonName"
        android:hint="Enter from date" />

    <Button
        android:id="@+id/date_icon"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:background="@drawable/ic_date" />

    </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_to"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:background="@color/primary_t"
        android:layout_margin="2dp"
        android:layout_weight="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TO"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:id="@+id/tv_to"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="12sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/tv_to"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="2">

    <EditText
        android:id="@+id/editText_to"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.5"
        android:padding="3dp"
        android:gravity="center"
        android:layout_margin="1dp"
        android:background="@color/colour_transparent"
        android:inputType="textPersonName"
        android:hint="Enter to date" />

    <Button
        android:id="@+id/date_icon_1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:background="@drawable/ic_date" />

    </LinearLayout>
    </RelativeLayout>

    </LinearLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_margin="2dp"
        android:layout_below="@+id/card_view_4"
        android:layout_height="wrap_content"
        android:weightSum="2">

    <Button
        android:id="@+id/_next"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/colour_transparent" />

    <Button
        android:id="@+id/_next_1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="NEXT"
        android:layout_margin="3dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button_click" />

    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
    </RelativeLayout>
</RelativeLayout>
