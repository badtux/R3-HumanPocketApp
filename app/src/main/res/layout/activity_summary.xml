<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_work_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_background"
    tools:context="com.rype3.pocket_hrm.LeaveActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/appbar"
            layout="@layout/appbar">
        </include>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar_layout"
        android:layout_above="@+id/button_layer">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        card_view:cardBackgroundColor="@color/primary_t"
        card_view:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="FULL NAME"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textColor="@color/black"
        android:id="@+id/title_full_name"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="12sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="USER NAME."
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textColor="@color/black"
        android:id="@+id/full_name"
        android:layout_below="@+id/title_full_name"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_2"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_below="@+id/card_view_1"
        card_view:cardBackgroundColor="@color/primary_t"
        card_view:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="EPF NUMBER"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textColor="@color/black"
        android:id="@+id/title_epf_no"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="12sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textColor="@color/black"
        android:id="@+id/epf_no"
        android:layout_below="@+id/title_epf_no"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_3"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_below="@+id/card_view_2"
        card_view:cardBackgroundColor="@color/primary_t"
        card_view:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="LEAVE TYPE"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textColor="@color/black"
        android:id="@+id/title_leave_type"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="12sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textColor="@color/black"
        android:id="@+id/leave_type"
        android:layout_below="@+id/title_leave_type"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_4"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_below="@+id/card_view_3"
        card_view:cardBackgroundColor="@color/primary_t"
        card_view:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="LEAVE CATEGORY"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textColor="@color/black"
        android:id="@+id/title_leave_category"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="12sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textColor="@color/black"
        android:id="@+id/leave_category"
        android:layout_below="@+id/title_leave_category"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_5"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_below="@+id/card_view_4"
        card_view:cardBackgroundColor="@color/primary_t"
        card_view:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="LEAVE REASON"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textColor="@color/black"
        android:id="@+id/title_leave_reason"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="12sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textColor="@color/black"
        android:id="@+id/leave_reason"
        android:layout_below="@+id/title_leave_reason"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_6"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_below="@+id/card_view_5"
        card_view:cardBackgroundColor="@color/primary_t"
        card_view:contentPadding="1dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/tv_from"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.45">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="FROM DATE"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textColor="@color/black"
        android:id="@+id/title_from_date"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="12sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:id="@+id/from_date"
        android:layout_below="@+id/title_from_date"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="-"
        android:gravity="center"
        android:textColor="@color/black"
        android:id="@+id/title"
        android:layout_weight="0.1"
        android:textStyle="bold"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.45">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TO DATE"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textColor="@color/black"
        android:id="@+id/title_to_date"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="12sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:textColor="@color/black"
        android:id="@+id/to_date"
        android:gravity="center"
        android:layout_below="@+id/title_to_date"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

    </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/button_layer"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_margin="2dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:weightSum="2">

    <Button
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="CANCEL"
        android:layout_margin="0.5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button_click" />

        <Button
            android:id="@+id/done"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/button_click"
            android:gravity="center"
            android:text="DONE"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>
