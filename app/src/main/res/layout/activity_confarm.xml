                    android:layout_below="@+id/linearLayout_leave_type"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
