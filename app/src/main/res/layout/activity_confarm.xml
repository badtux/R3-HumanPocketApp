                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout_leave_day"
                    android:layout_below="@+id/linearLayout_leave_period"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:layout_width="fill_parent"
