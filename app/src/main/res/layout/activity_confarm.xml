<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confarm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_900"
    tools:context="com.rype3.leaveapp.rype3leaveapp.ConfarmActivity">

    <LinearLayout
        android:id="@+id/linearLayout_leave_category"
        android:orientation="vertical"
        android:weightSum="9"
        android:layout_width="fill_parent"
        android:background="@color/gray_900"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/linearLayout_01_0"
            android:orientation="horizontal"
            android:layout_weight="0.66"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SUMMERY"
                android:layout_gravity="bottom"
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:id="@+id/title_userName"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_01"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/linearLayout_name_layer"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:text="NAME"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:background="@color/gray_800_trans"
                    android:layout_height="wrap_content"
                    android:id="@+id/tittle_name"
                    android:layout_weight="0.5" />

                <TextView
                    android:text="MR INDIKA GUNASEKARA."
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@color/gray_800_trans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_name"
                    android:layout_weight="1.5" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_01_1"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/linearLayout_epf_layer"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:text="EPF NO."
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:background="@color/gray_800_trans"
                    android:layout_height="wrap_content"
                    android:id="@+id/tittle_epf"
                    android:layout_weight="0.5" />

                <TextView
                    android:text="123456"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@color/gray_800_trans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_epf_no"
                    android:layout_weight="1.5" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_02"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/linearLayout_leave_type"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:text="LEAVE TYPE"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:background="@color/gray_800_trans"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_leave_type"
                    android:layout_weight="0.5" />

                <TextView
                    android:text="FULL DAY"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@color/gray_800_trans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/leave_type"
                    android:layout_weight="1.5" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_01_2"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <LinearLayout

                android:id="@+id/lleave_category"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:text="LEAVE CATEGORY"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:background="@color/gray_800_trans"
                    android:layout_height="wrap_content"
                    android:id="@+id/tittle_category"
                    android:layout_weight="0.5" />

                <TextView
                    android:text="CASUAL"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@color/gray_800_trans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/leave_category"
                    android:layout_weight="1.5" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_03"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp">


            <LinearLayout
                android:id="@+id/linearLayout_leave_period"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:text="LEAVE PERIOD"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:background="@color/gray_800_trans"
                    android:layout_height="wrap_content"
                    android:id="@+id/tittle_leave_period"
                    android:layout_weight="0.51" />

                <TextView
                    android:text="2016/12/21"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@color/gray_800_trans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_leave_period_from"
                    android:layout_weight="0.7" />

                <TextView
                    android:text="-"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@color/gray_800_trans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_leave_period_"
                    android:layout_weight="0.1" />


                <TextView
                    android:text="2016/12/25"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@color/gray_800_trans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_leave_period_to"
                    android:layout_weight="0.69" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_01_3"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/linearLayout_leave_reason"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:text="LEAVE REASON"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:background="@color/gray_800_trans"
                    android:layout_height="wrap_content"
                    android:id="@+id/tittle_reason"
                    android:layout_weight="0.5" />

                <TextView
                    android:text="SICK"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@color/gray_800_trans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_leave_reason"
                    android:layout_weight="1.5" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_04"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_05"
            android:orientation="horizontal"
            android:layout_weight="1.14"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/linearLayout_footer"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textSize="40sp"
                    android:layout_weight="1"
                    android:text="HELP"
                    android:background="@drawable/button_click03"
                    android:textColor="@color/white"
                    android:id="@+id/button_help" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textSize="40sp"
                    android:text="EXIT"
                    android:layout_weight="1"
                    android:textColor="@color/red"
                    android:background="@drawable/button_click03"
                    android:id="@+id/button_exit" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textSize="40sp"
                    android:text="EDIT"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@drawable/button_click03"
                    android:id="@+id/button_edit" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textSize="40sp"
                    android:text="CONFIRM"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@drawable/button_click03"
                    android:id="@+id/button_confirm" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
