                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/textView_leave_day"-->
                    <!--android:layout_weight="1.5" />-->

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout_leave_reason"
                    android:layout_below="@+id/linearLayout_leave_day"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:text="LEAVE REASON"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:background="@color/gray_800_trans"
                        android:layout_height="wrap_content"
                        android:id="@+id/tittle_reason"
                        android:layout_weight="0.5" />

                    <TextView
                        android:text="SICK"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:background="@color/gray_800_trans"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_leave_reason"
                        android:layout_weight="1.5" />

                </LinearLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="EDIT"
            android:drawablePadding="-20dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@drawable/button_click"
            android:id="@+id/button_edit"
            android:layout_alignParentBottom="true"
