<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_confarm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_900"
    tools:context="com.rype3.leaveapp.rype3leaveapp.ConfarmActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_user"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardBackgroundColor="@color/gray_700"
            card_view:contentPadding="5dp">


            <RelativeLayout
                android:id="@+id/relative_layout_01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="SUMMERY"
                    android:textSize="25sp"
                    android:layout_margin="2.5dp"
                    android:textColor="@color/white"
                    android:id="@+id/title_userName"/>



                <LinearLayout
                    android:id="@+id/linearLayout_name_layer"
                    android:layout_below="@+id/title_userName"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:text="NAME"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:background="@color/gray_800_trans"
                        android:layout_height="wrap_content"
                        android:id="@+id/tittle_name"
                        android:layout_weight="0.5" />

                    <TextView
                        android:text="MR INDIKA GUNASEKARA."
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:background="@color/gray_800_trans"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_name"
                        android:layout_weight="1.5" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout_epf_layer"
                    android:layout_below="@+id/linearLayout_name_layer"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:text="EPF NO."
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:background="@color/gray_800_trans"
                        android:layout_height="wrap_content"
                        android:id="@+id/tittle_epf"
                        android:layout_weight="0.5" />

                    <TextView
                        android:text="123456"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:background="@color/gray_800_trans"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_epf_no"
                        android:layout_weight="1.5" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout_leave_type"
                    android:layout_below="@+id/linearLayout_epf_layer"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:text="LEAVE TYPE"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:background="@color/gray_800_trans"
                        android:layout_height="wrap_content"
                        android:id="@+id/title_leave_type"
                        android:layout_weight="0.5" />

