<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.rype3.leaveapp.rype3leaveapp.TestActivity">

    <android.support.v4.widget.DrawerLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerlayout"
        tools:context=".TestActivity">

        <RelativeLayout
            android:id="@+id/image_layer1"
            android:layout_width="fill_parent"
            android:background="@color/gray_900"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <LinearLayout
                            android:id="@+id/linearLayout_n1"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_above="@+id/linearLayout_n2"
                            android:layout_centerHorizontal="true">

                            <Button
                                android:text="1"
                                style="@style/n_keyboard_number_button"
                                android:id="@+id/button1" />

                            <Button
                                android:text="2"
                                style="@style/n_keyboard_number_button"
                                android:id="@+id/button2" />

                            <Button
                                android:text="3"
                                style="@style/n_keyboard_number_button"
                                android:id="@+id/button3" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_n2"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_above="@+id/linearLayout_n0"
                            android:layout_centerHorizontal="true">

                            <Button
                                android:text="4"
                                style="@style/n_keyboard_number_button"
                                android:id="@+id/button4" />

                            <Button
                                android:text="5"
                                style="@style/n_keyboard_number_button"
                                android:id="@+id/button5" />

                            <Button
                                android:text="6"
                                style="@style/n_keyboard_number_button"
                                android:id="@+id/button6" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearLayout_n0"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true">
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_n3"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_below="@+id/linearLayout_n0"
                            android:layout_centerHorizontal="true">

                            <Button
                                android:text="7"
                                style="@style/n_keyboard_number_button"
                                android:id="@+id/button7" />

                            <Button
                                android:text="8"
                                style="@style/n_keyboard_number_button"
                                android:id="@+id/button8" />
                            <Button
                                android:text="9"
                                style="@style/n_keyboard_number_button"
                                android:id="@+id/button9" /></LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_n4"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_below="@+id/linearLayout_n3"
                            android:layout_centerHorizontal="true">

                            <Button
                                android:text="C"
                                style="@style/n_keyboard_number_button_1"
                                android:textColor="@color/red"
                                android:id="@+id/button_clear" />

                            <Button
                                android:text="0"
                                style="@style/n_keyboard_number_button"
                                android:id="@+id/button0" />

                            <Button
                                android:text="B"
                                style="@style/n_keyboard_number_button_1"
                                android:id="@+id/button_back" /></LinearLayout>
                    </RelativeLayout></LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout_leave_category"
                        android:orientation="vertical"
                        android:weightSum="9"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <LinearLayout
                            android:id="@+id/linearLayout_01_0"
                            android:orientation="horizontal"
                            android:layout_weight="0.66"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp">
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_01"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp">
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_01_1"
                            android:orientation="horizontal"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp">



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_02"
                            android:orientation="horizontal"
                            android:layout_weight="2"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp">

                            <EditText
                                android:id="@+id/password_field"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@color/white"
                                android:textColor="@color/black"
                                android:textSize="40sp"
                                android:maxLines="1"
                                android:maxLength="15"
                                android:inputType="numberPassword"
                                android:gravity="center"
                                android:hint="PIN NUMBER" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_01_2"
                            android:orientation="horizontal"
                            android:layout_weight="0.5"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp">


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_03"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp">



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_01_3"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp">



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_04"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp">
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_05"
                            android:orientation="horizontal"
                            android:layout_weight="1.14"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp">

                            <LinearLayout
                                android:id="@+id/linearLayout_footer"
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="2"
                                    android:orientation="horizontal"
                                    android:id="@+id/linearLayout" >


                                    <Button
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:textSize="40sp"
                                        android:text="EXIT"
                                        android:gravity="center|left"
                                        android:padding="20dp"
                                        android:textColor="@color/white"
                                        android:background="@drawable/button_click05"
                                        android:id="@+id/button_back_language" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="2"
                                    android:orientation="horizontal"
                                    android:id="@+id/linearLayout1" >

                                    <Button
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:textSize="40sp"
                                        android:text="CONNECT"
                                        android:gravity="center|right"
                                        android:padding="20dp"
                                        android:textColor="@color/white"
                                        android:background="@drawable/button_click04"
                                        android:id="@+id/button_connect" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout></android.support.design.widget.CoordinatorLayout>