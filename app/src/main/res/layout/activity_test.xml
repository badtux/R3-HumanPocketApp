                    android:textColor="@color/white"
                    android:layout_below="@+id/linearLayout_leave_type"
                    android:id="@+id/title_leave_category"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp" />

                <LinearLayout
                    android:id="@+id/linearLayout_leave_category"
                    android:layout_below="@+id/title_leave_category"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:weightSum="4"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/myRadioGroup">

                        <RadioButton
                            android:text="CASUAL"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:layout_width="wrap_content"
                            android:padding="2.5dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/radio_casual"
                            android:layout_weight="1" />


                        <RadioButton
                            android:text="ANNUAL"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:padding="2.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radio_annual"
                            android:layout_weight="1" />

                        <RadioButton
                            android:text="MEDICAL"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:layout_width="wrap_content"
                            android:padding="2.5dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/radio_medical"
                            android:layout_weight="1" />

                        <RadioButton
                            android:text="NO PAY"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:padding="2.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radio_no_pay"
                            android:layout_weight="1" />
                    </RadioGroup>

