<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.rype3.leaveapp.rype3leaveapp.ApplicationActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/gray_900">

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="NEXT"
            android:drawablePadding="-10dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:drawableRight="@drawable/ic_next"
            android:background="@drawable/button_click"
            android:id="@+id/button_next"
            android:layout_margin="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:text="HELP"
            android:drawablePadding="-20dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="@drawable/button_click"
            android:id="@+id/button_help"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="15dp" />


        <android.support.v7.widget.CardView
            android:id="@+id/card_view_user"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardBackgroundColor="@color/gray_700"
            card_view:contentPadding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">


            <RelativeLayout
                android:id="@+id/relative_layout_01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="MR. INDIKA GUNASEKARA"
                    android:textSize="30sp"
                    android:layout_margin="2.5dp"
                    android:textColor="@color/white"
                    android:id="@+id/title_userName"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT LEAVE TYPE"
                    android:textColor="@color/white"
                    android:layout_below="@+id/title_userName"
                    android:id="@+id/title_leave_type"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp" />
                <LinearLayout
                    android:id="@+id/linearLayout_leave_type"
