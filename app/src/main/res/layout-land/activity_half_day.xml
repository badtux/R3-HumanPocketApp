<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_900"
    tools:context=".FromDateActivity" >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_900"
        tools:context=".FromDateActivity" >


        <LinearLayout
            android:id="@+id/linearLayout_leave_category"
            android:orientation="vertical"
            android:weightSum="9"
            android:layout_width="fill_parent"
            android:background="@color/gray_900"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/linearLayout_01_0"
                android:orientation="horizontal"
                android:layout_weight="0.6"
                android:layout_width="fill_parent"
                android:layout_height="0dp">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_01"
                android:orientation="horizontal"
                android:layout_weight="1.24"
                android:layout_width="fill_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:id="@+id/relative_layout_01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/textFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="50sp"
                        android:textColor="@color/white"
                        android:text="FROM : "
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout></LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_01_1"
                android:orientation="horizontal"
                android:layout_weight="0.1"
                android:layout_width="fill_parent"
                android:layout_height="0dp">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_02"
                android:orientation="horizontal"
                android:layout_weight="1.84"
                android:layout_width="fill_parent"
                android:layout_height="0dp">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:weightSum="7"
                    android:gravity="center"
                    android:layout_height="fill_parent">

                    <TextView
                        android:text="2017"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:textSize="50sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/textView_year" />

                    <TextView
                        android:text="/"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:textSize="50sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/textView_1" />

                    <TextView
                        android:text="MARCH"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textSize="50sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/textView_month" />

                    <TextView
                        android:text=""
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:textSize="50sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/textView_0" />

                    <TextView
                        android:text="/"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:textSize="50sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/textView_2" />

                    <TextView
                        android:text="26"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="50sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/textView_day" />

                    <TextView
                        android:text="WENDESDAY"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:textSize="50sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/textView_weekday" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_01_2"
                android:orientation="horizontal"
                android:layout_weight="0.1"
                android:layout_width="fill_parent"
                android:layout_height="0dp">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_03"
                android:orientation="horizontal"
                android:layout_weight="2.34"
                android:layout_width="fill_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:id="@+id/leave_category"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:weightSum="4"
                    android:layout_height="fill_parent">
                    <DatePicker
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/datePicker"
                        android:calendarViewShown="false"
                        android:datePickerMode="spinner"
                        style="@style/MyDatePicker" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_01_3"
                android:orientation="horizontal"
                android:layout_weight="0.1"
                android:layout_width="fill_parent"
                android:layout_height="0dp">



            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_04"
                android:orientation="horizontal"
                android:layout_weight="1.44"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_05"
                android:orientation="horizontal"
                android:layout_weight="1.14"
                android:layout_width="fill_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:id="@+id/linearLayout_footer"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:textSize="40sp"
                        android:layout_weight="1"
                        android:text="BACK"
                        android:background="@drawable/button_click03"
                        android:textColor="@color/white"
                        android:id="@+id/button_back" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:textSize="40sp"
                        android:text="EXIT"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:background="@drawable/button_click03"
                        android:id="@+id/button_exit" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:textSize="40sp"
                        android:text="NEXT"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:background="@drawable/button_click03"
                        android:id="@+id/button_next" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>