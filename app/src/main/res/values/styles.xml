<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="keyboard_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="keyboard_number_button" parent="keyboard_button">
        <item name="android:tag">number_button</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="n_keyboard_number_button" parent="keyboard_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:tag">number_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_click_1</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="n_keyboard_number_button_1" parent="keyboard_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_click_1</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/primary_text</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <!-- Popup Menu Text Color styles -->
    <style name="TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
